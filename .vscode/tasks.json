{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build release with msvc",
            "type": "shell",
            "command": "make\\build_with_msvc.cmd",
            "args": [ "${relativeFile}", "/DDEBUG=0", "/Febin/windows/msvc/release/${fileBasenameNoExtension}.exe" ],
            "group": "build",
            "presentation": { "reveal": "always", "focus": true, "panel": "dedicated" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build debug with msvc",
            "type": "shell",
            "command": "make\\build_with_msvc.cmd",
            "args": [ "${relativeFile}", "/DDEBUG=1", "/Zi", "/Febin/windows/msvc/debug/${fileBasenameNoExtension}_d.exe" ],
            "group": "build",
            "presentation": { "reveal": "always", "focus": true, "panel": "dedicated" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build release with clang",
            "type": "shell",
            "command": "make\\build_with_clang.cmd",
            "args": [ "${relativeFile}", "-DDEBUG=0", "-o", "bin/windows/clang/release/${fileBasenameNoExtension}.exe" ],
            "group": { "kind": "build", "isDefault": true },
            "presentation": { "reveal": "always", "focus": true, "panel": "dedicated" },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build debug with clang",
            "type": "shell",
            "command": "make\\build_with_clang.cmd",
            "args": [ "${relativeFile}", "-DDEBUG=1", "-o", "bin/windows/clang/debug/${fileBasenameNoExtension}_d.exe" ],
            "group": "build",
            "presentation": { "reveal": "always", "focus": true, "panel": "dedicated" },
            "problemMatcher": "$gcc"
        }
    ]
}