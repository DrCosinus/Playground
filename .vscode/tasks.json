{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "clear": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
    },
    "type": "shell",
    "tasks": [
        {
            "group": "build",
            "command": "make\\BuildTask.exe",
            "label": "build release with msvc",
            "args": [
                "-msvc",
                "${relativeFile}",
                "-ndebug",
                "-warnings_are_errors",
                "-blueprint:playground.blueprint.json"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "group": "build",
            "command": "make\\BuildTask.exe",
            "label": "build debug with msvc",
            "args": [
                "-msvc",
                "${relativeFile}",
                "-debug",
                "-warnings_are_errors",
                "-blueprint:playground.blueprint.json",
                "-output:bin/project_msvc_d.exe"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "group": "build",
            "command": "make\\BuildTask.exe",
            "label": "build release with clang",
            "args": [
                "-clang",
                "${relativeFile}",
                "-ndebug",
                "-warnings_are_errors",
                "-blueprint:playground.blueprint.json",
                "-output:bin/project_clang_r.exe"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "group": "build",
            "command": "make\\BuildTask.exe",
            "label": "build debug with clang",
            "args": [
                "-clang",
                "${relativeFile}",
                "-debug",
                "-warnings_are_errors",
                "-blueprint:playground.blueprint.json",
                "-output:bin/project_clang_d.exe"
            ],
            "problemMatcher": "$gcc"
        },
    ]
}